<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="com.sogeti.rental.ui.cmd.displayCommand"
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.sogeti.rental.ui.cmd.customerSelected">
         <and>
            <count
                  value="1">
            </count>
            <iterate>
               <adapt
                     type="com.opcoach.training.rental.Customer">
               </adapt>
            </iterate>
         </and>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.sogeti.rental.ui.handlers.CopyHandler"
            commandId="org.eclipse.ui.edit.copy">
         <activeWhen>
            <reference
                  definitionId="com.sogeti.rental.ui.cmd.customerSelected">
            </reference></activeWhen>
         <enabledWhen>
            <reference
                  definitionId="com.sogeti.rental.ui.cmd.customerSelected">
            </reference></enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:com.sogeti.rental.ui.views.rentalAgencyView?after=additions">
         <command
               commandId="org.eclipse.ui.edit.copy"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
