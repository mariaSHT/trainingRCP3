<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="palette" name="%extension-point.name" schema="schema/palette.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.sogeti.rental.ui"
            name="%category.name">
      </category>
      <view
            category="com.sogeti.rental.ui"
            class="com.sogeti.rental.ui.RentalPropertyView"
            id="com.sogeti.rental.ui.views.rentalView"
            name="%view.name"
            icon="icons/Rentals.png"
            restorable="true">
      </view>
      <view
            category="com.sogeti.rental.ui"
            class="com.sogeti.rental.ui.RentalAgencyView"
            icon="icons/Agency.png"
            id="com.sogeti.rental.ui.views.rentalAgencyView"
            name="%view.name.0"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.sogeti.rental.ui.perspective.RentalPerspective"
            icon="icons/Agency.png"
            id="com.sogeti.rental.ui.perspective.RentalPerspective"
            name="%perspective.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="com.sogeti.rental.preferences"
            class="com.sogeti.rental.ui.pref.RentalColorPreferences"
            id="com.sogeti.rental.ui.colorprefpage"
            name="%page.name">
      </page>
      <page
            category="com.sogeti.rental.preferences"
            class="com.sogeti.rental.ui.pref.RentalColorPreferences"
            id="com.sogeti.rental.ui.rentalcolorprefpage"
            name="%page.name.0">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.sogeti.rental.ui.RentalPrefInit">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="%menu.label">
            <command
                  commandId="com.sogeti.rental.ui.commands.displayCommand"
                  label="%command.label"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:com.sogeti.rental.ui.views.rentalAgencyView?after=additions">
         <command
               commandId="com.sogeti.rental.ui.commands.displayCommand"
               label="%command.label.0"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.views.ResourceNavigator?before=additions">
         <command
               commandId="com.sogeti.rental.ui.commands.displayCommand"
               label="%command.label.1"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="toolbar:com.sogeti.rental.ui.views.rentalAgencyView?before=additions">
         <command
               commandId="com.sogeti.rental.ui.commands.displayCommand"
               label="%command.label.2"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:com.sogeti.rental.ui.views.rentalAgencyView?after=additions">
         <command
               commandId="com.sogeti.rental.ui.commands.displayCommand"
               label="%command.label.3"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="com.sogeti.rental.ui.cmd.category"
            id="com.sogeti.rental.ui.commands.displayCommand"
            name="%command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.sogeti.rental.ui.handlers.DisplayHandler"
            commandId="com.sogeti.rental.ui.commands.displayCommand">
      </handler>
   </extension>
   <extension
         point="com.sogeti.rental.ui.palette">
      <palette
            id="com.sogeti.rental.ui.paletteDefault"
            name="%palette.name"
            paletteClass="com.sogeti.rental.ui.palette.DefaultPalette">
      </palette>
      <palette
            id="com.sogeti.rental.ui.paletteMoche"
            name="%palette.name.0"
            paletteClass="com.sogeti.rental.ui.palette.PaletteMochePalette">
      </palette>
   </extension>

</plugin>
